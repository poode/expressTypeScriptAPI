extends layout
block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign In

        // register form
        form(method='POST' action='/login')
          div.form-group
            label(for='username') Name:
            input#name.form-control(type='text', placeholder='your username' name='username')
          div.form-group
            label(for='password') Password:
            input#pw.form-control(type='password', placeholder='your password'  name='password')
          button.btn.btn-primary(type='submit') Sign In
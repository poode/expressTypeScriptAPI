{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es7", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "app/build",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "types": [
      "node",
      "chai",
      "mocha",
      "express",
      "reflect-metadata"
    ]
  },

  "exclude": [
    "node_modules", "./app/build"
  ],

  "include": [
    "app/src/**/*.ts"
  ]
}